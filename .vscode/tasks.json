{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "activate environment",
            "type": "shell",
            "command": "conda",
            "args": [
                "env",
                "list"
            ]
        },
        {
            "label": "test",
            "type": "shell",
            "group": "test",
            "command": "python",
            "args": [
                "-m",
                "tests"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "dependsOn": [
                "activate environment"
            ]
        }
    ]
}